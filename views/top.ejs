<%- include('partials/header', { user: user }) -%>

<div class="container">
    <h1>top</h1>
    <div class="row mb-2">
        <ul class="list-group col-md-6">
            <h3>Artists</h3>
            <% artist.forEach(elem => { %>
                <%- include('components/list-item', {elem: elem, type: 'artists'}); %>
            <% }) %>
        </ul>

        <ul class="list-group col-md-6">
            <h3>Albums</h3>
            <% album.forEach(elem => { %>
                <%- include('components/list-item', {elem: elem, type: 'albums'}); %>
            <% }) %>
        </ul>

        <ul class="list-group col-md-6">
            <h3>Songs</h3>
            <% song.forEach(elem => { %>
                <%- include('components/list-item', {elem: elem, type: 'songs'}); %>
            <% }) %>
        </ul>

        <ul class="list-group col-md-6">
            <h3>Lyrics</h3>
            <% lyrics.forEach(elem => { %>
                <%- include('components/list-item', {elem: elem, type: 'lyrics'}); %>
            <% }) %>
        </ul>
    </div>

</div>

<%- include('partials/footer') -%>