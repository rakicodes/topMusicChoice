<div class="col-md-6">
    <h2>Add <%= type %></h2>
    <form action="/<%= type %>/create" method="POST">
      <div class="mb-3">
          <label for="name" class="form-label"><%= type %></label>
          <input type="text" class="form-control" id="name" name="name">
      </div>
      <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
    </form>
</div>